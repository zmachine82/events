<article id="user">
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= @user.email %></h2>
  </header>
  <% if @registrations.any? %>
    <h3>Registered For</h3>
    <ul>
      <% @registrations.each do |reg| %>
      <li>
        <%= link_to reg.event.name, reg.event %>
        (<%= time_ago_in_words(reg.created_at) %> ago)
      </li>
      <% end %>
    </ul>
  <% end %>
  <footer>
    <nav>
      <% if current_user?(@user) %>
        <%= link_to "Edit Account", edit_user_path(@user), class: "button" %>
        <%= link_to "Delete Account", @user,
                      method: :delete,
                      data: {confirm: "Are you sure?"},
                      class: "button" %>
      <% end %>
    </nav>
  </footer>
</article>
